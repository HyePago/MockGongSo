<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <!-- EditText -->
        <item name="colorControlNormal">@color/colorPrimary</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
        <item name="colorControlHighlight">@color/colorPrimary</item>
        <item name="android:textColorHint">@color/black</item>

        <!-- No Title Bar -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="TextStyle2">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
    </style>

    <style name="TextStyle4">
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextStyle3">
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="textStyle5">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="TextStyle6">
        <item name="android:textSize">19sp</item>
    </style>
    
    <style name="EditText1">
        <item name="android:windowSoftInputMode">adjustResize</item>
    </style>
    
    <style name="bottomBarTextView" parent="@android:style/TextAppearance.Widget.TextView">
        <item name="android:textSize">8dp</item>
    </style>
</resources>
