<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.constraint.ConstraintLayout
        android:layout_width="300dp"
        android:layout_height="200dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">
        <TextView
            android:id="@+id/topText"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="17dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3단계 목표를 입력해주세요!"
            style="@style/TextStyle3"
            app:layout_constraintLeft_toLeftOf="parent"/>
        <TextView
            android:id="@+id/bottomText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="17dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:text="3단계 목표를 입력해주세요 :)"
            app:layout_constraintTop_toBottomOf="@id/topText"
            android:layout_marginTop="6dp"/>
        <EditText
            android:id="@+id/smallEdit"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="17dp"
            app:layout_constraintTop_toBottomOf="@id/bottomText"/>
        <Button
            android:id="@+id/cancel"
            android:layout_width="73dp"
            android:layout_height="50dp"
            android:background="@drawable/delcancelbutton"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="10dp"
            android:text="아니요"/>
        <Button
            android:id="@+id/delBtn"
            android:layout_width="73dp"
            android:layout_height="50dp"
            android:background="@drawable/delokbutton"
            app:layout_constraintRight_toLeftOf="@id/cancel"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:text="네"/>
    </android.support.constraint.ConstraintLayout>
</android.support.constraint.ConstraintLayout>