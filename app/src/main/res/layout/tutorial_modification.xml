<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/coordinatorLayout"
    android:background="@color/backgroundColor">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.constraint.Guideline
            android:id="@+id/guideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.15" />
        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="바라는 회사 취업하기"
            android:gravity="center"
            style="@style/textStyle5"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:textColor="@color/black"
            app:layout_constraintTop_toBottomOf="@id/guideline"/>

        <View
            android:id="@+id/line"
            android:layout_width="200dp"
            android:layout_height="1dp"
            android:orientation="vertical"
            android:layout_marginTop="10dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/title"
            android:background="@color/colorPrimaryDark"/>

        <TextView
            android:id="@+id/subTitle"
            style="@style/TextStyle2"
            app:layout_constraintTop_toBottomOf="@id/line"
            android:layout_marginTop="15dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="지금까지 54 % 달성 중"/>

        <android.support.constraint.ConstraintLayout
            android:id="@+id/subConstraintLayout1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/subTitle"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="50dp">
            <TextView
                android:id="@+id/secondTitle1"
                android:layout_width="80dp"
                android:layout_height="80dp"
                style="@style/TextStyle6"
                android:gravity="center"
                android:background="@drawable/mandalart_box_2"/>
            <TextView
                android:id="@+id/secondTitle2"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@drawable/mandalart_box_2"
                android:gravity="center"
                style="@style/TextStyle6"
                app:layout_constraintLeft_toRightOf="@id/secondTitle1"
                android:layout_marginLeft="10dp"/>
            <TextView
                android:id="@+id/secondTitle3"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@drawable/mandalart_box_2"
                android:gravity="center"
                style="@style/TextStyle6"
                app:layout_constraintLeft_toRightOf="@id/secondTitle2"
                android:layout_marginLeft="10dp"/>
        </android.support.constraint.ConstraintLayout>
        <android.support.constraint.ConstraintLayout
            android:id="@+id/subConstraintLayout2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/subConstraintLayout1"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="10dp">
            <TextView
                android:id="@+id/secondTitle4"
                android:layout_width="80dp"
                android:layout_height="80dp"
                style="@style/TextStyle6"
                android:gravity="center"
                android:background="@drawable/mandalart_box_2"/>
            <TextView
                android:id="@+id/firstTitle"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@drawable/mandalart_box_4"
                app:layout_constraintLeft_toRightOf="@id/secondTitle4"
                android:textColor="@color/white"
                android:gravity="center"
                style="@style/TextStyle6"
                android:layout_marginLeft="10dp"/>
            <TextView
                android:id="@+id/secondTitle5"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@drawable/mandalart_box_2"
                android:gravity="center"
                style="@style/TextStyle6"
                app:layout_constraintLeft_toRightOf="@id/firstTitle"
                android:layout_marginLeft="10dp"/>
        </android.support.constraint.ConstraintLayout>
        <android.support.constraint.ConstraintLayout
            android:id="@+id/subConstraintLayout3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/subConstraintLayout2"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="10dp">
            <TextView
                android:id="@+id/secondTitle6"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:gravity="center"
                style="@style/TextStyle6"
                android:background="@drawable/mandalart_box_2"/>
            <TextView
                android:id="@+id/secondTitle7"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@drawable/mandalart_box_2"
                android:gravity="center"
                style="@style/TextStyle6"
                app:layout_constraintLeft_toRightOf="@id/secondTitle6"
                android:layout_marginLeft="10dp"/>
            <TextView
                android:id="@+id/secondTitle8"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@drawable/mandalart_box_2"
                android:gravity="center"
                style="@style/TextStyle6"
                app:layout_constraintLeft_toRightOf="@id/secondTitle7"
                android:layout_marginLeft="10dp"/>
        </android.support.constraint.ConstraintLayout>

    </android.support.constraint.ConstraintLayout>
    <android.support.constraint.ConstraintLayout
        android:id="@+id/backlayout"
        android:background="@color/gray"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></android.support.constraint.ConstraintLayout>

    <FrameLayout
        android:id="@+id/frameLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toBottomOf="@id/titleBar"
        app:layout_constraintBottom_toTopOf="@id/bottomNavigation"
        android:orientation="vertical" />
    <android.support.constraint.ConstraintLayout
        android:id="@+id/titleBar"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/white">
        <TextView
            android:id="@+id/titlebartxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="만다라트"
            android:textColor="@color/black"
            style="@style/TextStyle3"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />
        <ImageView
            android:id="@+id/rightButton"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/pencil"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginRight="12dp"/>
    </android.support.constraint.ConstraintLayout>
    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="bottom">
        <android.support.design.widget.BottomNavigationView
            android:id="@+id/bottomNavigation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:itemIconTint="@color/colorPrimaryDark"
            android:background="@color/white"
            app:fabAlignmentMode="center"
            app:fabAttached="true"
            app:labelVisibilityMode="labeled"
            app:itemTextColor="@color/black"
            app:menu="@menu/bottom_navigation_menu" >
        </android.support.design.widget.BottomNavigationView>
    </android.support.constraint.ConstraintLayout>

    <ImageView
        android:id="@+id/fabBtn"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:layout_marginTop="27dp"
        android:elevation="6dp"
        app:layout_anchor="@id/bottomNavigation"
        android:src="@drawable/floating_1"
        android:backgroundTint="@color/colorPrimary"
        app:layout_anchorGravity="top|center" />

    <include layout="@layout/fab_layout" android:id="@+id/subFloating"
        android:visibility="gone"/>
    <!--
    <ImageView
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_gravity="center"
        android:elevation="6dp"
        app:layout_anchor="@id/bottomNavigation"
        android:src="@mipmap/floating"
        app:layout_anchorGravity="top|center" />
        -->

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="상단에 있는\n수정하기 아이콘으로\n만다라트의 목표를\n언제든 수정하고\n추가할 수 있어요!\n\n잘못 세웠던 목표가 있다면\n다시 차근차근\n채워보세요:)"
            android:textColor="@color/white"
            android:gravity="right"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="85dp"
            android:layout_marginRight="25dp"/>
    </android.support.constraint.ConstraintLayout>
</android.support.design.widget.CoordinatorLayout>