<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundColor"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <android.support.constraint.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.2" />
    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="만들어진 2단계의 칸을 눌러\n3단계의 목표를 정해주세요   "
        android:gravity="center"
        style="@style/textStyle5"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/guideline"/>
    <TextView
        android:id="@+id/subTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorPrimaryDark"
        android:text="2단계의 목표는 3단계의 중심 키워드가 되고\n언제든지 수정할 수 있어요"
        app:layout_constraintTop_toBottomOf="@id/title"
        style="@style/TextStyle2"
        android:gravity="center"
        android:layout_marginTop="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>
    <Button
        android:id="@+id/rightArrow"
        android:layout_width="15dp"
        android:layout_height="20dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="45dp"
        app:layout_constraintTop_toTopOf="@id/title"
        android:layout_marginTop="20dp"
        android:padding="0dp"
        android:background="@drawable/right" />
    <Button
        android:id="@+id/leftArrow"
        android:layout_width="15dp"
        android:layout_height="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="45dp"
        app:layout_constraintTop_toTopOf="@id/title"
        android:layout_marginTop="20dp"
        android:padding="0dp"
        android:background="@mipmap/left" />
    <android.support.constraint.ConstraintLayout
        android:id="@+id/subConstraintLayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/subTitle"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="50dp">
        <TextView
            android:id="@+id/secondTitle1"
            android:layout_width="75dp"
            android:layout_height="75dp"
            style="@style/TextStyle6"
            android:gravity="center"
            android:background="@drawable/mandalart_box_2"/>
        <TextView
            android:id="@+id/secondTitle2"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:background="@drawable/mandalart_box_2"
            android:gravity="center"
            style="@style/TextStyle6"
            app:layout_constraintLeft_toRightOf="@id/secondTitle1"
            android:layout_marginLeft="17dp"/>
        <TextView
            android:id="@+id/secondTitle3"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:background="@drawable/mandalart_box_2"
            android:gravity="center"
            style="@style/TextStyle6"
            app:layout_constraintLeft_toRightOf="@id/secondTitle2"
            android:layout_marginLeft="17dp"/>
    </android.support.constraint.ConstraintLayout>
    <android.support.constraint.ConstraintLayout
        android:id="@+id/subConstraintLayout2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/subConstraintLayout1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="17dp">
        <TextView
            android:id="@+id/secondTitle4"
            android:layout_width="75dp"
            android:layout_height="75dp"
            style="@style/TextStyle6"
            android:gravity="center"
            android:background="@drawable/mandalart_box_2"/>
        <TextView
            android:id="@+id/firstTitle"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:background="@drawable/mandalart_box_3"
            app:layout_constraintLeft_toRightOf="@id/secondTitle4"
            android:textColor="@color/white"
            android:text="1"
            android:gravity="center"
            style="@style/TextStyle6"
            android:layout_marginLeft="17dp"/>
        <TextView
            android:id="@+id/secondTitle5"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:background="@drawable/mandalart_box_2"
            android:gravity="center"
            style="@style/TextStyle6"
            app:layout_constraintLeft_toRightOf="@id/firstTitle"
            android:layout_marginLeft="17dp"/>
    </android.support.constraint.ConstraintLayout>
    <android.support.constraint.ConstraintLayout
        android:id="@+id/subConstraintLayout3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/subConstraintLayout2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="17dp">
        <TextView
            android:id="@+id/secondTitle6"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:gravity="center"
            style="@style/TextStyle6"
            android:background="@drawable/mandalart_box_2"/>
        <TextView
            android:id="@+id/secondTitle7"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:background="@drawable/mandalart_box_2"
            android:gravity="center"
            style="@style/TextStyle6"
            app:layout_constraintLeft_toRightOf="@id/secondTitle6"
            android:layout_marginLeft="17dp"/>
        <TextView
            android:id="@+id/secondTitle8"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:background="@drawable/mandalart_box_2"
            android:gravity="center"
            style="@style/TextStyle6"
            app:layout_constraintLeft_toRightOf="@id/secondTitle7"
            android:layout_marginLeft="17dp"/>
    </android.support.constraint.ConstraintLayout>
</android.support.constraint.ConstraintLayout>